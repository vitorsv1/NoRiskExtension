{
    "description": "A simple Web Sniffer",
    "manifest_version": 2,
    "name": "WebSniffer",
    "version": "1.0",
    "permissions": [
        "webRequest",
        "activeTab",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background-script.js"
        ]
    },
    "icons": {
        "48": "icons/border-48.png"
    },
    "browser_action": {
        "default_icon": {
            "48": "icons/border-48.png"
        },
        "default_title": "WebSniffer",
        "default_popup": "popup/popup.html"
    },
    "content_security_policy": "default-src 'self'"
}